<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customer_card_container"
    android:layout_width="match_parent"
    android:layout_height="96dp"

    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp">


    <RelativeLayout
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/quarter_margin"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginBottom="@dimen/quarter_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mini_contractor_profile"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/customer_contractor_card_image_view"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/anton_privolnov" />

        <TextView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:text="4.7"
            android:gravity="center"
            android:layout_alignBottom="@+id/customer_contractor_card_image_view"
            android:layout_alignParentStart="true"
            android:background="@drawable/mini_profile_rating"
            android:textColor="@android:color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/customer_contractor_card_name"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:text="Антон Привольнов"
            android:layout_margin="@dimen/quarter_margin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/customer_contractor_card_reviews_number"
            android:text="Отзывов: 32"
            android:layout_margin="@dimen/quarter_margin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/customer_contractor_card_location"
            android:text="Минск"
            android:layout_margin="@dimen/quarter_margin"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/margin"/>


    </RelativeLayout>


    <TextView
        android:id="@+id/card_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.v7.widget.CardView>