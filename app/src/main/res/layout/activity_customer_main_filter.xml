<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.CustomerMainFilterActivity">

    <RelativeLayout
        android:id="@+id/customer_main_filter_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <ImageButton
            android:id="@+id/customer_main_filter_back_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back_white" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/customer_main_filter_toolbar"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_margin="@dimen/quarter_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:paddingStart="@dimen/half_margin"
                android:text="Сортировка:" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/half_margin"
                android:layout_weight="2"
                android:background="@drawable/edit_text">

                <CheckBox
                    android:id="@+id/customer_filer_price_checkbox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ckecbox_left"
                    android:button="@null"
                    android:gravity="center"
                    android:text="Цена"
                    android:textColor="@drawable/checkbox_text_color" />

                <TableRow
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary">

                </TableRow>

                <CheckBox
                    android:id="@+id/customer_filer_rating_checkbox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/checkbox_right"

                    android:button="@null"
                    android:gravity="center"
                    android:text="Рейтинг"
                    android:textColor="@drawable/checkbox_text_color" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_margin="@dimen/quarter_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:paddingStart="@dimen/half_margin"
                android:text="Цена:" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/half_margin"
                android:layout_weight="2"
                android:background="@drawable/edit_text">

                <EditText
                    android:id="@+id/customer_filter_price_start"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ckecbox_left"
                    android:button="@null"
                    android:gravity="center"
                    android:hint="От"
                    android:inputType="number"
                    android:maxLength="6"

                    android:textColor="@drawable/checkbox_text_color"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="14sp" />

                <TableRow
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary">

                </TableRow>

                <EditText
                    android:id="@+id/customer_filter_price_end"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/checkbox_right"
                    android:button="@null"

                    android:gravity="center"
                    android:hint="До"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColor="@drawable/checkbox_text_color"

                    android:textColorHint="@color/colorPrimary"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_margin="@dimen/quarter_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:paddingStart="@dimen/half_margin"
                android:text="Дата:" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/half_margin"
                android:layout_weight="2"
                android:background="@drawable/edit_text">

                <TextView
                    android:id="@+id/customer_filter_start_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="От"
                    android:textColor="@drawable/checkbox_text_color" />

                <TableRow
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary">

                </TableRow>

                <TextView
                    android:id="@+id/customer_filter_end_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="До"
                    android:textColor="@drawable/checkbox_text_color" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_margin="@dimen/quarter_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:paddingStart="@dimen/half_margin"
                android:text="Рейтинг:" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/half_margin"
                android:layout_weight="2"
                android:background="@drawable/edit_text">

                <EditText
                    android:id="@+id/customer_filter_rating_start"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ckecbox_left"
                    android:button="@null"
                    android:gravity="center"
                    android:hint="От"
                    android:inputType="number"
                    android:maxLength="1"

                    android:textColor="@drawable/checkbox_text_color"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="14sp" />

                <TableRow
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary">

                </TableRow>

                <EditText
                    android:id="@+id/customer_filter_rating_end"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/checkbox_right"
                    android:button="@null"
                    android:gravity="center"

                    android:hint="До"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@drawable/checkbox_text_color"

                    android:textColorHint="@color/colorPrimary"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/filter_location_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_margin="@dimen/quarter_margin"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="Локация"

            android:textAllCaps="false"
            android:textColor="@drawable/button_text_color">


        </Button>


        <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ExpandableListView>


    </LinearLayout>

</RelativeLayout>