<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.CustomerContractorActivity">

    <RelativeLayout
        android:id="@+id/customer_contractor_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/colorPrimary"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/customer_contractor_back_button"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back_white"
            android:layout_width="36dp"
            android:layout_height="36dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/cutomer_contractor_activity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Профиль выбранного исполнителя"/>

</RelativeLayout>